<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.moutamid.russiatvradio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RussiaTVRadio"
        tools:targetApi="31">
        <activity
            android:name=".TestActivity"
            android:hardwareAccelerated="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".BottomSheetDialog"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".Edit_Radio"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Edit_Channel"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Radio_List"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Channel_List"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Add_Radio"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Add_Channel"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Radio_Activity"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Channel_Activity"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Favorities"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".Settings_Activity"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".MusicActivity"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".VedioActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.ads.AudienceNetworkActivity"
            android:hardwareAccelerated="true" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_ad_id" />
    </application>

</manifest>